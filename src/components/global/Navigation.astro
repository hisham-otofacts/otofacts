---
import logoSvg from '@assets/images/logo.svg';

const { country } = Astro.locals;
---

<section class="border-b border-black/5 bg-white">
  <div class="mx-auto w-full max-w-7xl px-8 md:px-12 lg:px-16">
    <div
      x-data="{ open: false }"
      class="relative mx-auto flex w-full flex-col bg-white py-5 md:flex-row md:items-center md:justify-between md:px-6"
    >
      <div class="flex flex-row items-center justify-between lg:justify-start">
        <a href={`/${country.code}/`} class="inline-flex items-center gap-3 text-black">
          <img alt="Otofacts" class="h-8" src={logoSvg.src} />
        </a>
        <button
          @click="open = !open"
          class="inline-flex items-center justify-center p-2 text-gray-400 hover:text-black focus:text-black focus:outline-none lg:hidden"
        >
          <svg class="h-6 w-6" stroke="currentColor" fill="none" viewBox="0 0 24 24">
            <path
              :class="{'hidden': open, 'inline-flex': !open }"
              class="inline-flex"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
            <path
              :class="{'hidden': !open, 'inline-flex': open }"
              class="hidden"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      <nav
        :class="{'flex': open, 'hidden': !open}"
        class="hidden flex-grow flex-col items-center md:flex md:flex-row md:justify-end md:pb-0"
      >
        <a
          class="px-2 py-2 text-sm font-medium text-black hover:text-accent-400 md:px-3 lg:ml-auto lg:px-6"
          href={`/${country.code}/about/`}>About</a
        >
        <a
          class="px-2 py-2 text-sm font-medium text-black hover:text-accent-400 md:px-3 lg:px-6"
          href={`/${country.code}/pricing/`}>Pricing</a
        >

        <a
          class="px-2 py-2 text-sm font-medium text-black hover:text-accent-400 md:px-3 lg:px-6"
          href={`/${country.code}/faq/`}
        >
          Faq</a
        >

        <div class="inline-flex list-none items-center gap-2 lg:ml-auto">
          <a
            href={`/${country.code}/signup/`}
            class="focus:shadow-outline mt-2 block px-4 py-2 text-sm font-medium text-black hover:text-accent-400 focus:outline-none md:mt-0"
          >
            Sign up
          </a>
          <a
            href={`/${country.code}/login/`}
            class="group inline-flex h-8 items-center justify-center rounded-lg bg-gray-100 px-4 py-2 text-sm font-medium text-black hover:bg-gray-50 focus:outline-none focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-black active:bg-gray-200 active:text-accent-400"
          >
            Log in
          </a>
        </div>
      </nav>
    </div>
  </div>
</section>
